<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme"
           parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/primary_text_default_material_dark</item>
        <item name="colorControlHighlight">@color/primary_text_default_material_dark</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actionbar_back</item>
        <item name="android:backgroundStacked">@drawable/actionbar_back</item>
        <item name="android:backgroundSplit">@drawable/actionbar_back</item>

        <item name="background">@drawable/actionbar_back</item>
        <item name="backgroundStacked">@drawable/actionbar_back</item>
        <item name="backgroundSplit">@drawable/actionbar_back</item>

        <item name="android:actionBarTabTextStyle">@drawable/actionbar_textColor</item>
        <item name="actionBarTabTextStyle">@drawable/actionbar_textColor</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>


    <!--Default Style is Dark-->
    <!--Declare Light for OverRide Default Dark Theme-->
    <!--Declare DarkActionBar in Light Theme for only get DarkAction bar in light Theme -->


    <!--Theme.Holo for a "dark" theme.-->
    <!--Theme.Holo.Light for a "light" theme.-->
    <!--Theme.Holo.Light.DarkActionBar for the light theme with a dark action bar.-->
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="SplashPageTheme"
           parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="MainPageTheme"
           parent="Theme.AppCompat.NoActionBar">
    </style>

</resources>