<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTheme"
           parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/primary_text_default_material_dark</item>
        <item name="colorControlHighlight">@color/primary_text_default_material_dark</item>
    </style>

    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/actionbar_back</item>

        <item name="android:actionBarTabTextStyle">@drawable/actionbar_textColor</item>
        <item name="actionBarTabTextStyle">@drawable/actionbar_textColor</item>

        <item name="background">@drawable/actionbar_back</item>
        <item name="backgroundStacked">@drawable/actionbar_back</item>
        <item name="backgroundSplit">@drawable/actionbar_back</item>

    </style>

    <!-- ActionBar tabs text styles -->
    <style name="MyActionBarTabText"
           parent="Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MainPageTheme"
           parent="Theme.AppCompat.NoActionBar">
    </style>

    <!--<style name="MyActionBarTitleText"-->
    <!--parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">-->
